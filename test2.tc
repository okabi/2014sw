int fact(int n){
    if(n <= 1)	return 1;
    else return n * fact(n - 1);
}

int fib(int n){
    if(n == 0)	return 0;
    else if(n == 1)    return 1;
    else return fib(n - 1) + fib(n - 2);
}

int sum(int n){
    int i,ans;
    i = 1;
    ans = 0;
    while(i <= n){
        ans = ans + i;
	i = i + 1;
    }
    return ans;
}
